import java.util.Scanner;

public class Act09 {
	public static void main(String[] args) {


		        Scanner scanner = new Scanner(System.in);
		        
		        // Solicitar al usuario el tamaño del cuadrado
		        System.out.print("Introduce el tamaño del cuadrado: ");
		        int tamaño = scanner.nextInt();
		        
		        // Imprimir el cuadrado vacío
		        for (int i = 0; i < tamaño; i++) {
		            for (int j = 0; j < tamaño; j++) {
		                // Si estamos en el borde, imprimimos un asterisco
		                if (i == 0 || i == tamaño - 1 || j == 0 || j == tamaño - 1) {
		                    System.out.print("*");
		                } else {
		                    // Si no estamos en el borde, imprimimos un espacio
		                    System.out.print(" ");
		                }
		            }
		            System.out.println(); // Salto de línea después de cada fila
		        }
		        
		        scanner.close();

		
		
		
		
	}
}
